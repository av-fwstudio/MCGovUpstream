<section class="gov-links-section">
  <div class="container">
    <h2 class="gov-links-title">{{ content.field_title|raw }}</h2>
    <div class="gov-links-subtitle">{{ content.field_sub_title|raw }}</div>

    <div class="gov-links-carousel">
      <div class="gov-links-track slick-slider" id="govLinksTrack">
        {% for item in paragraph.field_carousel_icon_items %}
          {% set sub_paragraph = item.entity %}
          {% set media = sub_paragraph.field_carousel_icon.entity %}
          {% set image_uri = media.field_media_image.entity.uri.value %}
          {% set image_url = file_url(image_uri) %}
          {% set link = sub_paragraph.field_carousel_icon_link %}

          <div class="gov-link-card">
            {% if link %}
              <a href="{{ link.uri|replace({'internal:': ''}) }}">
                <img src="{{ image_url }}" alt="{{ media.name.value }}" />
              </a>
            {% else %}
              <img src="{{ image_url }}" alt="{{ media.name.value }}" />
            {% endif %}
          </div>
        {% endfor %}
      </div>
    </div>

    <div class="carousel-indicators">
      {% for i in 0..paragraph.field_carousel_icon_items|length - 1 %}
        <div class="indicator {{ i == 1 ? 'active' }}"></div>
      {% endfor %}
    </div>
  </div>
</section>
